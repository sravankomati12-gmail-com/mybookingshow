<%- include('../home.ejs'); -%>

<button id="rzp-button1" class="btn btn-success m-4">checkout</button>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  console.log("<%= amount%>");
  document.getElementById("rzp-button1").onclick = function (e) {
    e.preventDefault();
    var options = {
      key: "rzp_test_WR61mxPOZqUdaM", // Enter the Key ID generated from the Dashboard
      amount: "<%= amount%>", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
      currency: "INR",
      order_id: "<%= order%>", //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
      handler: function (response) {
        // alert(response.razorpay_payment_id);
        // alert(response.razorpay_order_id);
        // alert(response.razorpay_signature);
        var token = localStorage.getItem("token");
        var headers = {};
        const ticket = localStorage.getItem("ticketId");
        headers["Authorization"] = token;
        const data = {
          id: "<%= Id%>",
          paymentId: response.razorpay_payment_id,
        };
        $.ajax({
          type: "POST",
          url: "http://localhost:4005/api/payment/paymentupdate",
          data,
          headers: headers,
          dataType: "json",
          success: (res) => {
            localStorage.removeItem("ticketId");
            window.location = "/ticketbookedlist";
          },
        });
      },
    };
    var rzp1 = new Razorpay(options);
    rzp1.open();
  };
</script>
